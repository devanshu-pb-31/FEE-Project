<% layout("/layouts/boilerplate") -%>
    <div class="row mt-3 ">
        <div class="col-8 offset-3">
            <h3>Listing details</h3>
        </div>
        <div class="card col-6 offset-3 show-card ">
            <img src="<%= listings.image.url%>" class="card-img-top show-img " alt="image">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= listings.title%>
                    </b>
                    <br>
                    <%= listings.description%>
                        <br>
                        &#8377;
                        <%= listings.price.toLocaleString("en-IN")%>
                            <br>
                            <%= listings.location%>
                                <br>
                                <%= listings.country%>
                </p>
            </div>
        </div>

        <br>
        <div class="btns mb-3">
            <a href="/listings/<%= listings._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <form method="POST" action="/listings/<%=listings._id%>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>
    </div>